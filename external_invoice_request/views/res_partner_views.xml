<odoo>
    <record id="action_generate_partner_token" model="ir.actions.server">
        <field name="name">Generate Token</field>
        <field name="model_id" ref="base.model_res_partner"/>
        <field name="binding_model_id" ref="base.model_res_partner"/>
        <field name="state">code</field>
        <field name="code">
            action = records.action_generate_token()
        </field>
    </record>

  <!-- Inherit form view partner -->
  <record id="view_partner_form_inherit_external_token" model="ir.ui.view">
        <field name="name">res.partner.form.external.token</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <field name="vat" position="after">
                <field name="external_token" readonly="1"/>
            </field>
        </field>
  </record>

</odoo>

